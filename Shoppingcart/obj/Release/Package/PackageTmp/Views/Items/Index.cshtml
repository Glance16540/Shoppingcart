@model IEnumerable<Shoppingcart.Models.CodeFirst.Item>


    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active col-lg-12">

                <img src="~/Assets/Images/3.jpg" />
                <div class="headertext">
                    <h2><strong>Welcome!</strong></h2>
                    <p> See Our 2017 Collections</p>
                    <button onclick="location.href='@Url.Action("Index", "Items")'">Shop New Items Here!</button>
                </div>
            </div>

            <div class="item col-lg-12">

                <img src="~/Assets/Images/jonna-fransa-227556.jpg" style="height:650px;width:1200px;" />
                <div class="headertext">
                    <h2 style="color:#FF533D"><strong>Learn More About Our Watches</strong></h2>
                    <button onclick="location.href='@Url.Action("About", "Home")'">See Our Five Signs of Quality</button>
                </div>
            </div>

            <div class="item  col-lg-12">

                <img src="~/Assets/Images/malte-wingen-264446.jpg" style="height:650px;width:1200px;" />
                <div class="headertext">
                    <h2 style="color:#FF533D;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;"><strong>Each Watch Custom To You </strong></h2>
                    <p style="color: #0F1626; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Our Watch Specialists Will Assist You Day and Night To Find The Right Fit For You</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    &nbsp;
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
   
    <div class="container">

        <div class="row" style="text-align:center;margin-left:0px;margin-right:0px;">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <a href="@Url.Action("Details","items" ,new {id = item.ID })">
                    <img src="@Url.Content(item.MediaURL)" class="img-responsive" style="display:block;margin:auto" />
                    <p style="margin-left:0px;color:#f5f5f5"><strong>@item.Name</strong></p>
                    <p style="margin-left:0px;color:#f5f5f5"><strong>$@item.Price.ToString()</strong></p>
                        </a>
                    @if (User.IsInRole("Admin"))
                     {
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })

                     }

                </div>

            }
        </div>
    </div>


  
