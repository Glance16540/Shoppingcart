@model Shoppingcart.Models.CodeFirst.Order

@{
    ViewBag.Title = "Details";
}

<h2 style="color:#f5f5f5">Thanks You For Ordering!</h2>

<div class="jumbotron" style="background-color:#FF533D">
    <h4 style="color:#f5f5f5">Heres Your Details</h4>
    <hr />
    <dl class="dl-horizontal" style="color:#f5f5f5">
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zipcode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zipcode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Completed)
        </dd>

    </dl>
    <table class="table"style="color:#f5f5f5">
        <tr>
            <th></th>
            <th>
                Item
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Unit Total
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.OrderItems)
        {
            <tr style="color:#f5f5f5">
                <td>
                    <img src="@item.Item.MediaURL" style="max-width: 100px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.Name)
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @{ 
                        var unitTotal = item.UnitPrice * item.Quantity;
                    }
                    @unitTotal
                </td>
                <td>
                    <a href="@Url.Action("Details","Items", new { id = item.ItemId })">Details</a>
                </td>
            </tr>
        }

    </table>
</div>
<p class="btn btn-danger" style="border:none;color:#f5f5f5">
    <a href="@Url.Action("Index","Items")" style="color:#f5f5f5">Order Again!</a>
   
   
</p>
<a href="@Url.Action("Index","Orders")" class="btn btn-info">See Order History</a>