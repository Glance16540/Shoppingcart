@model Shoppingcart.Models.CodeFirst.Order

@{
    ViewBag.Title = "Create";
}

<h2 style="color:#f5f5f5">Create Order</h2>
<table class="table"style="color:#f5f5f5">
    <tr>
        <th></th>
        <th>
            Item
        </th>
        <th>
            Quantity
        </th>
        <th>
            Unit Price
        </th>
        <th>
            Unit Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.CartItems)
    {
        <tr style="color:#f5f5f5">
            <td>
                <img src="@item.Item.MediaURL" style="max-width: 100px" />
            </td>
            <td>
                @item.Item.Name
            </td>
            <td>
                @item.Count
            </td>
            <td>
                @item.Item.Price
            </td>
            <td>
                @item.UnitTotal
            </td>
            <td>
                <a href="@Url.Action("Details","Items", new { id = item.Itemid })">Details</a>
            </td>
        </tr>
    }

</table>
<hr />
<h1 style="color:#f5f5f5">$ @ViewBag.carttotal</h1>
<hr />
<div>
    <a href="@Url.Action("Index","Items")" class="btn btn-default" style="color:#f5f5f5;background-color:#FF533D">Click Here to add More items to your Cart!</a>
</div>
&nbsp;



