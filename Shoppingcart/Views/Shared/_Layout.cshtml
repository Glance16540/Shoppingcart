        <!--End Of Navagation Bar-->
        <div style="margin-left:300px">
            <div class="row" style="margin-left: 20px; margin-right: 20px">
                <h3>
                    <button class="pull-left" style="border:none;background-color:white;font-size:24px;"><i class="fa fa-bars" onclick="display()"></i></button>
                    <button class="pull-right" style="background-color:white;border:none;"><i class="fa fa-search"></i></button>
                    <button class="pull-right" style="background-color:white;border:none;"><i class="fa fa-shopping-cart" onclick="shoppingcartitems()"></i></button> &nbsp;
                    <span class="pull-right">@Html.Partial("_LoginPartial")</span>
                </h3>
            </div>
            <div class="container">
                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <div>
                            <img src="~/Assests/Images/3.jpg" class="img-responsive;" style="width:100%;height:85%; padding:30px;margin:0px;margin-left:0px" />
                            <div class="headertext">
                                <h2><strong>New Arrivals</strong></h2>
                                <p>2017 Collections</p>
                                <button onclick="location.href='@Url.Action("Index", "Items")'" >Shop New Items Here!</button>
                            </div>
                        </div>
                    </div>
                </div>



                @RenderBody()
                <hr />
                <!--beginning of info section at bottom-->
